{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "typeRoots": [ "node_modules/@types" ],
    "resolveJsonModule": true,
    "outDir": "build",
    "removeComments": true,
    "types": [
      "@types/node",
      "@types/chrome"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}